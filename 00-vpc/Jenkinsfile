pipeline {
    agent {
       label 'AGENT-1'
    }
    environment {
        appVersion = '' 
        REGION  =  "us-east-1" 
        ACC_ID  = "888947293288" 
        PROJECT = "roboshop"
    }
    options {
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds() 
    }
    // Build 
    stages  {
        stage('init') {
            steps {
                script {
                    withAWS(credentials: 'aws-cred', region: 'us-east-1') {
                        sh """
                            cd 00-vpc
                            terraform init -reconfigure
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            echo "i will always say Hello Again!"
            deleteDir()
        }
        success {
            echo "Hello Success"
        }
        failure {
            echo "Hello Failure"
        }
    }
}